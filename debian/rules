#!/usr/bin/make -f

build:
	dh_testdir
	$(MAKE) DSP_API=1

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs
	$(MAKE) install DESTDIR=$(CURDIR)/debian/tmp

binary-arch: install
	dh_testdir -a
	dh_testroot -a
	dh_installchangelogs
	dh_install --sourcedir=debian/tmp -a
	dh_link -a
	dh_strip --dbg-package=dsp-tools-dbg -a
	dh_fixperms -a
	dh_installdeb -a
	dh_shlibdeps -a
	dh_gencontrol -a
	dh_md5sums -a
	dh_builddeb -a

binary-indep:

binary: binary-arch binary-indep

clean:
	dh_testdir
	$(MAKE) clean
	dh_clean

.PHONY: build install binary-arch binary-indep binary clean
